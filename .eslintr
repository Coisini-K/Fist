{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:html/recommended"
    ],
    "plugins": [
        "html"
    ],
    "rules": {
        "html/no-inline-styles": "off",  // 禁用 no-inline-styles 规则
        "html/require-doctype": "off"    // 禁用 doctype-first 规则
    },
    "settings": {
        "react": {
          "version": "detect"  // 自动检测 React 版本
          // 或者显式指定版本号，例如 "17.0.2"
          // "version": "17.0.2"
        }
      },
    "ignorePatterns": ["**/.history/**"] 
}